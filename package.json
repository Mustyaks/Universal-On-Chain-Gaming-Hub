    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "starknet": "^5.24.0",
    "graphql": "^16.8.0",
    "apollo-server-express": "^3.12.0",
