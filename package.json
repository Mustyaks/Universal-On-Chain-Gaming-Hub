    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "starknet",
    "gaming",
    "blockchain",
    "bitcoin",
    "dojo",
    "nft",
    "marketplace"
